<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DescriptionLabel">
        <item name="android:textColor">#23568d</item>
    </style>

    <style name="CommentLabel">
        <item name="android:textColor">#23568d</item>
        <item name="android:textSize">14sp</item>    
    </style>

    <style name="CommentDateLabel">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">11sp</item>    
    </style>

    <style name="NonSyncedImage">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>    
        <item name="android:src">@drawable/ic_newitem</item>    
    </style>
    
    <style name="NonSyncedImag2e">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>    
        <item name="android:src">@drawable/ic_newitem</item>    
    </style>
    
    <style name="SyncFailureImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>    
        <item name="android:src">@drawable/ic_syncerror</item>    
    </style>
    
    <style name="NonSyncedCommentImage">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>    
        <item name="android:src">@drawable/ic_syncerror</item>    
    </style>
    
</resources>
